{% extends "./layout/layout.html.twig" %}

{% block title %}Inscription - MonBlog{% endblock %}

{% block app %}

{# En-tête #}
<div class="text-center mb-10">
  <h1 class="text-4xl font-bold text-white mb-3">
    Rejoignez la communauté
  </h1>
  <p class="text-white text-opacity-90">
    Créez votre compte en quelques secondes
  </p>
</div>

{# Formulaire d'inscription #}
<div class="max-w-md mx-auto">
  <div class="glass rounded-2xl shadow-xl p-8">
    
    <h2 class="text-2xl font-bold text-gray-900 mb-6 text-center">
      Inscription
    </h2>

    {# Message d'erreur global #}
    {% if errors.global is defined %}
      <div class="mb-6 p-4 bg-red-50 border border-red-200 rounded-lg">
        <p class="text-red-600 text-sm flex items-center">
          <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
          </svg>
          {{ errors.global }}
        </p>
      </div>
    {% endif %}

    <form action="/register" method="POST" class="space-y-6">
      
      {# Champ Nom #}
      <div>
        <label for="name" class="block text-sm font-semibold text-gray-700 mb-2">
          Nom d'utilisateur
        </label>
        <input
          type="text"
          id="name"
          name="name"
          placeholder="John Doe"
          class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent transition-all outline-none"
          value="{% if data.name is defined %}{{ data.name }}{% endif %}"
        >
        {% if errors.name is defined %}
          <p class="mt-2 text-sm text-red-600 flex items-center">
            <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
            </svg>
            {{ errors.name }}
          </p>
        {% endif %}
      </div>

      {# Champ Email #}
      <div>
        <label for="email" class="block text-sm font-semibold text-gray-700 mb-2">
          Adresse email
        </label>
        <input
          type="email"
          id="email"
          name="email"
          placeholder="exemple@email.com"
          class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent transition-all outline-none"
          value="{% if data.email is defined %}{{ data.email }}{% endif %}"
        >
        {% if errors.email is defined %}
          <p class="mt-2 text-sm text-red-600 flex items-center">
            <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
            </svg>
            {{ errors.email }}
          </p>
        {% endif %}
      </div>

      {# Champ Mot de passe #}
      <div>
        <label for="password" class="block text-sm font-semibold text-gray-700 mb-2">
          Mot de passe
        </label>
        <input
          type="password"
          id="password"
          name="password"
          placeholder="••••••••"
          class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent transition-all outline-none"
        >
      </div>

      {# Bouton de soumission #}
      <button 
        type="submit"
        class="w-full px-6 py-3 text-white bg-gradient-to-r from-purple-600 to-pink-600 rounded-lg hover:shadow-lg transition-all font-medium"
      >
        S'inscrire
      </button>

    </form>

    {# Lien vers connexion #}
    <div class="mt-6 text-center">
      <p class="text-gray-600">
        Déjà un compte ?
        <a href="/login" class="text-purple-600 hover:text-purple-800 font-semibold">
          Connectez-vous
        </a>
      </p>
    </div>

  </div>
</div>

{% endblock %}