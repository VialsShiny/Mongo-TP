{% extends "./layout/layout.html.twig" %}

{% block title %}Créer un article - MonBlog{% endblock %}

{% block app %}

{# En-tête #}
<div class="text-center mb-10">
  <h1 class="text-4xl font-bold text-white mb-3">
    Créer un nouvel article
  </h1>
  <p class="text-white text-opacity-90">
    Partagez vos idées avec la communauté
  </p>
</div>

{# Formulaire #}
<div class="max-w-3xl mx-auto">
  <form action="/blognew" method="POST" class="glass rounded-2xl shadow-xl p-8">
    
    {# Champ Titre #}
    <div class="mb-6">
      <label for="title" class="block text-sm font-semibold text-gray-700 mb-2">
        Titre de l'article
      </label>
      <input
        type="text"
        id="title"
        name="title"
        placeholder="Ex: Les meilleures pratiques en développement web"
        class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent transition-all outline-none"
        value="{% if data.title is defined %}{{ data.title }}{% endif %}"
      >
      {% if errors.title is defined %}
        <p class="mt-2 text-sm text-red-600 flex items-center">
          <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
          </svg>
          {{ errors.title }}
        </p>
      {% endif %}
    </div>

    {# Champ Contenu #}
    <div class="mb-8">
      <label for="content" class="block text-sm font-semibold text-gray-700 mb-2">
        Contenu de l'article
      </label>
      <textarea
        id="content"
        name="content"
        rows="12"
        placeholder="Écrivez votre article ici..."
        class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent transition-all outline-none resize-none"
      >{% if data.content is defined %}{{ data.content }}{% endif %}</textarea>
      {% if errors.content is defined %}
        <p class="mt-2 text-sm text-red-600 flex items-center">
          <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
          </svg>
          {{ errors.content }}
        </p>
      {% endif %}
    </div>

    {# Boutons d'action #}
    <div class="flex items-center justify-between gap-4">
      <a href="/" class="px-6 py-3 text-gray-700 hover:text-gray-900 font-medium transition-colors">
        Annuler
      </a>
      <button 
        type="submit"
        class="px-8 py-3 text-white bg-gradient-to-r from-purple-600 to-pink-600 rounded-lg hover:shadow-lg transition-all font-medium flex items-center"
      >
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8"/>
        </svg>
        Publier l'article
      </button>
    </div>

  </form>
</div>

{% endblock %}